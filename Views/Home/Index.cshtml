@{
	ViewData["Title"] = "Home Page";
}

<div class="container">
	<div class="row">
		<div class="col d-flex justify-content-center page-header">
			<h2 class="page-title">Overview</h2>
		</div>
	</div>
	<div class="row justify-content-center mt-3">
		<div class="col-md-9">
			<div class="row">
				<div class="col-lg">
					<div class="card">
						<div class="content">
							<div class="row">
								<div class="col-sm-4">
									<div class="icon-big text-center">
										<i class="fas fa-tasks" style="color:red"></i>
									</div>
								</div>
								<div class="col-sm-8 d-flex justify-content-center align-items-center">
									<div class="detail">
										@* <p class="detail-subtitle">Tasks Due</p> *@
										<div class="row">
											<div class="col d-flex justify-content-center">
												<span class="number">
													@ViewBag.DueToday
												</span>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="footer">
								<div class="stats">
									<i class="fas fa-calendar-day"></i> Due Today
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg">
					<div class="card">
						<div class="content">
							<div class="row">
								<div class="col-sm-4">
									<div class="icon-big text-center">
										<i class="fa-solid fa-hourglass-end"></i>
									</div>
								</div>
								<div class="col-sm-8 d-flex justify-content-center align-items-center">
									<div class="detail">
										@* <p class="detail-subtitle">Tasks Due</p> *@
										<div class="row">
											<div class="col d-flex justify-content-center">
												<span class="number">
													@ViewBag.Overdue
												</span>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="footer">
								<div class="stats">
									Overdue
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg">
					<div class="card">
						<div class="content">
							<div class="row">
								<div class="col-sm-4">
									<div class="icon-big text-center">
										<i class="fas fa-tasks"></i>
									</div>
								</div>
								<div class="col-sm-8 d-flex justify-content-center align-items-center">
									<div class="detail">
										@* <p class="detail-subtitle" title="Incomplete Tasks">Inc. Tasks</p> *@
										<div class="row">
											<div class="col d-flex justify-content-center">
												<span class="number">
													@ViewBag.Uncompleted
												</span>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="footer">
								<div class="stats">
									Uncompleted
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg">
					<div class="card">
						<div class="content">
							<div class="row">
								<div class="col-sm-4">
									<div class="icon-big text-center">
										<i class="fas fa-exclamation-circle"></i>
									</div>
								</div>
								<div class="col-sm-8 d-flex justify-content-center align-items-center">
									<div class="detail">
										@* <p class="detail-subtitle" title="Important Tasks">Imp. Tasks</p> *@
										<div class="row">
											<div class="col d-flex justify-content-center">
												<span class="number">
													@ViewBag.Important
												</span>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="footer">
								<div class="stats">
									Important
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg">
					<div class="card" style="height: 525px;max-height: 525px;">
						<div class="card-header">Assinged To</div>
						<div class="card-body">
							<div class="canvas-wrapper">
								<canvas class="chart" id="doughnutchart"></canvas>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg">
					<div class="card" style="height: 525px;max-height: 525px;">
						<div class="card-header">Most Recent</div>
						<div class="card-body">
							<ul class="list-group">
								@foreach (var t in ViewBag.Tasks)
								{
									<li class="list-group-item">
										<div class="row">
											<div class="col text-nowrap text-truncate" title="@t.Title">
												@t.Title
											</div>
											<div class="col-auto">
												<small class="text-muted" title="Due Date">@t.DueAt</small>
											</div>
											<div class="col-auto">
												@if (@t.IsImportant)
												{
													<span title="Important"><i class="fas fa-exclamation" style="color:red"></i></span>
												}
											</div>
										</div>
									</li>
								}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


</div>

