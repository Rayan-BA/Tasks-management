@model User;

@{
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
	<div class="row">
		<div class="col d-flex justify-content-center page-header">
			<h2 class="page-title">Profile</h2>
		</div>
	</div>
	<div class="row justify-content-center mt-3">
		<div class="col-md-9">
			<div class="card">
				<div class="card-body">
					<form asp-controller="Dashboard" asp-action="EditProfile" asp-route-id="@Model.Id">
						<div class="row flex-column gap-4 align-content-center">
							<div class="col-md-6 d-flex justify-content-center">
								@if (ViewBag.Image != null)
								{
									<img src="@ViewBag.Image" alt="Profile Image" width="128px" height="128px" style="border-radius:50%;" />
								}
								else
								{
									<img src="~/images/128px-Default_pfp.svg.png" alt="Profile Image" />
								}
							</div>
							<div class="col-md-6">
								<label class="form-label">Display Name</label>
								<label class="form-control">@Model.DisplayName</label>
							</div>
							<div class="col-md-6">
								<label class="form-label">Email</label>
								<label class="form-control">@Model.Email</label>
							</div>
@* 							<div class="col-md-6">
								<label class="form-label">Manager (email)</label>
								<label class="form-control">
									@if (ViewBag.ManagerEmail != null)
									{
										@ViewBag.ManagerEmail
									}
									else
									{
										<span>Not set</span>
									}
								</label>
								@if (ViewBag.PendingManagerEmail != null)
								{
									<small class="text-muted">Request pending to @ViewBag.PendingManagerEmail</small>
								}
							</div> *@
						</div>
						<div class="row mt-3">
							<div class="col d-flex justify-content-center">
								<button class="btn btn-secondary" type="submit">Edit</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>