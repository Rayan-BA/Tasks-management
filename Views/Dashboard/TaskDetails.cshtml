@model TaskModel

@{
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
	var Group = ViewBag.Group;
	var User = ViewBag.User;
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-9">
			<div class="row">
				<div class="col page-header d-flex justify-content-center">
					<h2 class="page-title">Task Details</h2>
				</div>
			</div>

			<div class="row flex-column align-content-center mt-3">
				<div class="col">
					<div class="card">
						<div class="card-header text-center">Task</div>
						<div class="card-body">
							<form asp-action="EditTask" asp-route-id="@Model.Id">
								<div class="row align-items-end">
									<div class="col">
										<label class="form-label">Title</label>
										<input type="text" asp-for="@Model.Title" class="form-control input" disabled />
									</div>
									<div class="col">
										<label class="from-label">Assigned user</label>
										<input type="text" asp-for="@User" class="form-control input" disabled />
									</div>
									<div class="col">
										<label class="from-label">Assigned group</label>
										<input type="text" asp-for="@Group" class="form-control input" disabled />
									</div>
								</div>
								<div class="row">
									<div class="col">
										<label class="form-label">Description</label>
										<textarea class="form-control input" disabled asp-for="@Model.Description"></textarea>
									</div>
								</div>
								<div class="row">
									<div class="col">
										<label class="form-label">Due Date</label>
										<input type="datetime-local" asp-for="@Model.DueAt" class="form-control input" disabled />
									</div>
									@* <div class="col"> *@
									@* 	<label class="form-label">Due Time</label> *@
									@* 	<input type="time" name="time" class="form-control input" disabled /> *@
									@* </div> *@
								</div>
								<div class="row py-2">
									<div class="col d-flex justify-content-center">
										<label>Completed</label>
										<input type="checkbox" asp-for="@Model.IsCompleted" class="form-check-sm mx-3 input" disabled />
									</div>
									<div class="col d-flex justify-content-center">
										<label>Important</label>
										<input type="checkbox" asp-for="@Model.IsImportant" class="form-check-sm mx-3 input" disabled />
									</div>
								</div>
								<div class="row mt-3">
									<div class="col d-flex justify-content-center gap-3" id="edit-task-buttons">
										<button class="btn btn-secondary" type="submit">Edit</button>
										<button class="btn btn-danger" type="button" onclick="$('#del_modal').toggle()">Delete</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal" tabindex="-1" id="del_modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Delete confirmation</h5>
				<button type="button" class="btn-close" onclick="$('#del_modal').toggle()"></button>
			</div>
			<div class="modal-body">
				<p>Are you sure you want to delete?</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" onclick="$('#del_modal').toggle()">Cancel</button>
				<button type="button" class="btn btn-danger" onclick="deleteTask(@Model.Id)">Delete</button>
			</div>
		</div>
	</div>
</div>