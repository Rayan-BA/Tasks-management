
@{
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
	var Groups = ViewBag.Groups;
	var Users = ViewBag.Users;
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-9">
			<div class="row">
				<div class="col page-header d-flex justify-content-center">
					<h2 class="page-title">Groups</h2>
				</div>
			</div>
			<div class="row flex-column align-content-center mt-3">
				<div class="col">
					<div class="card">
						<div class="card-header text-center">New Group</div>
						<div class="card-body">
							<form asp-action="CreateGroup" method="post">
								<div class="row align-items-end">
									<div class="col">
										<label class="form-label">Name</label>
										<input name="Name" class="form-control" required/>
									</div>
								</div>
								<div class="row">
									<div class="col">
										<label class="form-label">Description</label>
										<textarea class="form-control" name="Description"></textarea>
									</div>
								</div>
								<div class="row">
									<div class="col">
										<label class="form-label">Members</label>
										<select name="users" multiple class="form-select">
											@foreach (var u in Users)
											{
												<option value="@u.Id">@u.DisplayName</option>
											}
										</select>
										<small class="form-text">Ctrl + left click to choose multiple</small>
									</div>
								</div>
								<div class="row mt-3">
									<div class="col d-flex justify-content-center">
										<button class="btn btn-primary" type="submit">Create</button>
									</div>
								</div>
							</form>
						</div>
					</div>

				</div>

				<div class="col-md-12 mt-3">
					<div class="card">
						<div class="card-header text-center">Registered Groups</div>
						<div class="card-body">
							<ul class="list-group">
								@foreach (var g in ViewBag.Groups)
								{
									<li class="list-group-item">
										<a asp-action="GroupDetails" asp-route-id="@g.Id">
											<div class="row">
												<div class="col text-nowrap text-truncate" title="@g.Name">
													@g.Name
												</div>
											</div>
										</a>
									</li>
								}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>



</div>
