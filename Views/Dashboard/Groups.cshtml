@{
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
	var Groups = ViewBag.Groups;
}

<div class="container">
	<div class="row">
		<div class="col-md-12 page-header">
			<h2 class="page-title">Groups</h2>
		</div>
	</div>
	<div class="row align-content-center mt-3">
		<div class="col-md-12 mt-3">
			<div class="list-group">

				@foreach (var u in Groups)
				{
					<a asp-action="GroupDetails" asp-route-id="@u.Id" class="list-group-item list-group-item-action" aria-current="true">
						<div class="d-flex w-100 justify-content-between">
							<h5 class="mb-1">@u.DisplayName</h5>
						</div>
						<p class="mb-1">@u.Email</p>
						<small>And some small print.</small>
					</a>
				}

			</div>
		</div>
	</div>
</div>
